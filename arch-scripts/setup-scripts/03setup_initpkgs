#!/bin/bash
echo "Initial Setup"
cd
sudo apt install -y zstd curl linux-zen linux-zen-headers gcc make acpid arch-audit linux-firmware btrfs-progs networkmanager vim pkgconf plymouth efibootmgr wget curl texinfo openssh

sudo systemctl enable --now sshd
sudo cp -R $HOME/.dots/arch-scripts/preconfig-files/sshd_config /etc/ssh/

echo "Finished Installing Initial Packages"

#sudo reboot
